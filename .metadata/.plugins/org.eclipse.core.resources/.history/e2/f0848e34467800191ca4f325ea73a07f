			}
			System.out.println("key= " + key + " and value= " + newMap.get(key));
		}
//		System.out.println(sql);
//		System.out.println(book.getName());
		//调用业务逻辑
		
		//分发转向
	}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
